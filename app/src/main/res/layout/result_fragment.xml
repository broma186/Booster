<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@android:color/white"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/total_score_presenter"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:text="@string/total_score_pre"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:textColor="@color/colorBooster"
        android:layout_above="@id/total_score"
        android:fontFamily="@font/circular_book_bold"
        android:textSize="25dp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/total_score"
        android:text="00"
        android:textColor="@color/boosterBlack"
        android:padding="20dp"
        android:layout_gravity="center"
        android:layout_centerInParent="true"
        android:textSize="40sp"
        android:background="@drawable/result_background"
        android:gravity="center"
        android:fontFamily="@font/circular_book_bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/investment_result"
        android:text="This text reflects what kind of investor you are"
        android:textColor="@color/colorBooster"
        android:textSize="20dp"
        android:layout_below="@id/total_score"
        android:layout_marginTop="42dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:fontFamily="@font/circular_book_bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/show_button"
        android:layout_width="match_parent"
        android:background="@android:color/holo_green_light"
        android:fontFamily="@font/circular_book_bold"
        android:text="Show"
        android:layout_height="42dp"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="24dp"/>


</RelativeLayout>