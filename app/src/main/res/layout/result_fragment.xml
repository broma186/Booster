<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/colorBooster"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/total_score_presenter"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:text="@string/total_score_pre"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:textColor="@android:color/white"
        android:fontFamily="@font/circular_book_bold"
        android:textSize="25dp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/total_score"
        android:text="00"
        android:textColor="@color/colorBooster"
        android:padding="20dp"
        android:layout_gravity="center"
        android:textSize="40dp"
        android:background="@color/white"
        android:gravity="center"
        android:fontFamily="@font/circular_book_bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/investment_result"
        android:text="This text reflects what kind of investor you are"
        android:textColor="@android:color/white"
        android:textSize="20dp"
        android:layout_marginTop="30dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:fontFamily="@font/circular_book_bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>