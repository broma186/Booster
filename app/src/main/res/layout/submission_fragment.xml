<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBooster">

    <RelativeLayout
        android:gravity="center"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/text_view_layout"
            android:id="@+id/edit_text_layout"
            android:layout_gravity="center_horizontal">


            <EditText
                android:id="@+id/name"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_alignStart="@id/email"
                android:background="@color/white"
                android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                android:hint="Name" />

            <EditText
                android:id="@+id/email"
                android:layout_width="200dp"
                android:layout_below="@id/name"
                android:layout_height="wrap_content"
                android:layout_alignStart="@id/phone"
                android:background="@color/white"
                android:hint="Email" />

            <EditText
                android:id="@+id/phone"
                android:layout_width="200dp"
                android:layout_below="@id/email"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:hint="Phone"
                android:inputType="number" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/text_view_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <TextView
                android:id="@+id/name_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/circular_book_bold"
                android:text="@string/name_title"
                android:textColor="@color/white"
                android:layout_alignEnd="@id/email_title"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/email_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/circular_book_bold"
                android:layout_alignEnd="@id/phone_title"
                android:layout_below="@id/name_title"
                android:text="@string/email_title"
                android:textColor="@color/white"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/phone_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/email_title"
                android:fontFamily="@font/circular_book_bold"
                android:text="@string/phone_title"
                android:textColor="@color/white"
                android:textSize="20dp" />

        </RelativeLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/submit_button"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_alignParentBottom="true"
        android:background="@color/boosterGreen"
        android:fontFamily="@font/circular_book_bold"
        android:gravity="center"
        android:text="Submit"
        android:textColor="@color/colorBooster"
        android:textSize="24dp" />
</RelativeLayout>